<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Barcode">
    <androidx.appcompat.widget.Toolbar
        app:title="QR Barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="315dp"
        android:layout_height="347dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/scan"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="146dp" />
    <TextView
        android:textStyle="bold"
        android:textColor="#CE000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Millenial Parking System"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:textStyle="bold"
        android:textColor="#CE000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politeknik Negeri Jember"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/scan"
        android:layout_width="332dp"
        android:layout_height="52dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#3A88EC"
        android:text="Scan Sekarang"
        android:textColor="#FFFFFF" />


</LinearLayout>